{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "es2022",
        "preserveConstEnums": true,
        "moduleResolution": "Node",
        "strict": true,
        "sourceMap": true,
        "target": "es2022",
        "types": ["node"]
    },
    "include": ["./src/**/*.ts"], // Update the include path to match the actual location of your TypeScript files
    "exclude": ["node_modules"],
    "experimentalDecorators": true,
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}
